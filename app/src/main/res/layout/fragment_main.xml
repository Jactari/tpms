<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BGColor"
    tools:context="me.sudar.tpms.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="2">

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="0"
                app:layout_column="0"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_bottom_right">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="@string/front_left"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/pressure_value_fl"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pressure_value_height"
                        android:paddingLeft="7dp"
                        android:text="@string/triple_dash"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="@string/unit_psi"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <TextView
                        android:id="@+id/temp_value_fl"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/temp_value_height"
                        android:paddingLeft="7dp"
                        android:text="@string/double_dash"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="@string/deg_celsius"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <include layout="@layout/indicators_fl"/>
            </LinearLayout>
            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="0"
                app:layout_column="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="end"
                android:background="@drawable/border_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="@string/front_right"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingRight="5dp"
                        android:text="@string/unit_psi"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:id="@+id/pressure_value_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pressure_value_height"
                        android:paddingRight="7dp"
                        android:text="@string/triple_dash"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingRight="5dp"
                        android:text="@string/deg_celsius"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:id="@+id/temp_value_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/temp_value_height"
                        android:paddingRight="7dp"
                        android:text="@string/double_dash"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <include layout="@layout/indicators_fr"/>
            </LinearLayout>

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="1"
                app:layout_column="0"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@drawable/border_bottom_right">

                <include layout="@layout/indicators_rl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/temp_value_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/temp_value_height"
                        android:paddingLeft="7dp"
                        android:text="@string/double_dash"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/deg_celsius"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/pressure_value_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pressure_value_height"
                        android:paddingLeft="7dp"
                        android:text="@string/triple_dash"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/unit_psi"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="@string/rear_left"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="1"
                app:layout_column="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="end"
                android:background="@drawable/border_bottom">

                <include layout="@layout/indicators_rr"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="@string/deg_celsius"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:id="@+id/temp_value_rr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/temp_value_height"
                        android:paddingRight="7dp"
                        android:text="@string/double_dash"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="@string/unit_psi"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:id="@+id/pressure_value_rr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pressure_value_height"
                        android:paddingRight="7dp"
                        android:text="@string/triple_dash"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="@string/rear_right"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.GridLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/car"
            android:background="@color/BGColor"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/Green"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/spare_text"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/rounded_rect"
            android:text="@string/spare"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/LightGray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView
                    android:id="@+id/pressure_value_spare"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/temp_value_height"
                    android:paddingLeft="7dp"
                    android:text="@string/triple_dash"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/Green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:text="@string/unit_psi"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/Gray_Unit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/temp_value_spare"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/temp_value_height"
                    android:gravity="bottom"
                    android:paddingLeft="7dp"
                    android:text="@string/double_dash"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/Green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:text="@string/deg_celsius"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/Gray_Unit"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/indicators_spare"/>

    </RelativeLayout>
</LinearLayout>
