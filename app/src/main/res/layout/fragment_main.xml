<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/BGColor"
                tools:context="me.sudar.tpms.MainActivityFragment"
                tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="2">

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="0"
                app:layout_column="0"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_bottom_right">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="Front  L."
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="200"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="PSI"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="60"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="°C"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <include layout="@layout/indicators"/>
            </LinearLayout>
            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="0"
                app:layout_column="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="right"
                android:background="@drawable/border_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="Front  R."
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingRight="5dp"
                        android:text="PSI"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="7dp"
                        android:text="117"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingRight="5dp"
                        android:text="°C"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="7dp"
                        android:text="74"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <include layout="@layout/indicators"/>
            </LinearLayout>

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="1"
                app:layout_column="0"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@drawable/border_bottom_right">

                <include layout="@layout/indicators"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="45"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="°C"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="101"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="PSI"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="Rear  L."
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                app:layout_row="1"
                app:layout_column="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="right"
                android:background="@drawable/border_bottom">

                <include layout="@layout/indicators"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="°C"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="7dp"
                        android:text="59"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="PSI"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="7dp"
                        android:text="117"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_rect"
                        android:text="Rear  R."
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/LightGray"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/Green"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">
            <TextView
                android:id="@+id/spare_text"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/rounded_rect"
                android:text="Spare"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/LightGray"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="200"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="PSI"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingLeft="7dp"
                        android:text="74"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/Green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:text="°C"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/Gray_Unit"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rect"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@mipmap/ic_settings_white_24dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@mipmap/ic_settings_white_24dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@mipmap/ic_settings_white_24dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@mipmap/ic_settings_white_24dp"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
